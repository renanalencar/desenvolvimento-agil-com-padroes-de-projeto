package br.dev.rca;

/**
 * @author renanalencar
 *
 */

/**
 * Classe Points possui um valor numérico. Quando for adicionado um Achievement
 * desse tipo com q quantidade de pontos ganhos, deve ser somado ao anterior.
 * Não deve haver 2 Achievement do tipo Points com o mesmo nome para um usuário.
 *
 */
public class Points extends Achievement {

	private int amount;

	public Points(String name, int amount) {
		super(name);
		this.amount = amount;
	}

	public int getAmount() {
		return amount;
	}

	public void setAmount(int amount) {
		this.amount += amount;
	}

}
